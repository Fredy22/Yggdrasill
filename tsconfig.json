{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "removeComments": false,
    "resolveJsonModule": true,
    "paths": {
      "@actor/*": ["src/module/actor/*"],
      "@module/*": ["src/module/*"],
      "@scripts/*": ["src/scripts/*"],
      "foundry": ["types/foundry-pc-types"]
    },
    "types": [
      "jest",
      "node",
      "webpack-env",
      "foundry-pc-types"
    ],
    "typeRoots": ["node_modules/@types", "types"]
  },
}
